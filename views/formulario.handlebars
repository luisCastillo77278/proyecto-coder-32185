<div class="alert alert-success d-flex aling-items-center justify-content-between">
  <h2>Bienvienido: {{ name }}</h2>
  <div>
    <a href="/auth/logout" class="btn btn-danger">Logout</a>
  </div>
</div>

{{> header }}

<form action="/producto" method="post">

  <div class="form-group">
    <label for="title"><b>Nombre</b></label>
    <input id="title" class="form-control" type="text" name="title">
  </div>

  <div class="form-group">
    <label for="price"><b>Precio</b></label>
    <input id="price" class="form-control" type="text" name="price">
  </div>

  <div class="form-group">
    <label for="thumbnail"><b>Url Foto</b></label>
    <input id="thumbnail" class="form-control" type="text" name="thumbnail">
  </div>

  <button class="btn btn-success mt-3 mb-5">Registrar</button>
</form>

{{#if existError }}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error!</strong> {{ error }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}

