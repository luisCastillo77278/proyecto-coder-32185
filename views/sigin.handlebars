<h1 class="p-2 flex-grow-1 text-center text-primary">
  Sigin de usuario
</h1>
<form action="/auth/register" method="post">

  <div class="form-group">
    <label for="email">Email</label>
    <input 
      id="email" 
      class="form-control"   
      type="email" 
      name="email"
      placeholder="email@email.com"
    />
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input 
      class="form-control"
      type="password" 
      name="password" 
      id="password"
      placeholder="password"
    />
  </div>

  <button class="btn btn-success mt-3">Registrar</button>
</form>
<hr>
<a class="btn btn-success" href="/auth/login">login</a>